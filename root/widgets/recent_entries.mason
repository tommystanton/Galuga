<%args>
$nbr_entries => 5
</%args>
<%perl>
my @entries = $c->model('DB::Entries')->search({},
    {
        rows => $nbr_entries,
        order_by => { '-desc' => 'created' },
    }
);
</%perl>
<div class="widget">
<h3>Recent blog entries</h3>
<ul>
% for ( @entries ) {
<li>
<a href="<% $c->uri_for( '/entry', $_->url ) %>"><% $_->title %></a>
</li>
% }
</ul>

<p align="right" style="margin: 0px">
<a href="<% $c->uri_for( '/entries' ) %>">all entries</a>
</p>

</div>
